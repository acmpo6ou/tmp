# Functions
flacue() {
    metaflac --import-cuesheet-from="$1.cue" --set-tag-from-file="CUESHEET=$1.cue" "$1.flac"
}

venv() {
    if [ -d $1 ]; then
        source "$1/bin/activate"
    else
        virtualenv $1
        source "$1/bin/activate"
        pip install -U rich
    fi
}

adba() {
    adb push $1 "/storage/emulated/0/Audio/"
}

alias 'apt-get'="apt"
alias 'studio'="studio.sh"
alias 'srlog'="command cat /var/log/syslog | grep 'systemd-sleep' | grep \"Suspending\|resumed\""
