alias python3="python3.10"
alias pip="python3.10 -m pip"
alias pip3="python3.10 -m pip"

# git
alias glo='git log --oneline'
alias gs='git status'

# Other aliases
alias zalias='vim ~/Documents/tmp/rc/zsh_aliases'
