# Functions
flacue() {
    metaflac --import-cuesheet-from="$1.cue" --set-tag-from-file="CUESHEET=$1.cue" "$1.flac"
}

venv() {
    if [ -d $1 ]; then
        cd $1
        source bin/activate
    else
        python3.9 -m venv $1
        cd $1
        source bin/activate
        pip install -U pip
        pip install -U setuptools
        pip install -U wheel
        pip install -U rich
    fi
}

alias 'apt-get'="apt"
alias 'studio'="studio.sh"
